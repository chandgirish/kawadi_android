<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.swornim.kawadi.MainActivity">

    <ProgressBar
        android:id="@+id/progressbarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/registerDriver"
        android:layout_below="@id/progressbarID"
        android:text="ADD DRIVER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/driverRequest"
        android:layout_below="@id/registerDriver"
        android:text="DRIVER REQUEST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/addWaste"
        android:layout_below="@id/driverRequest"
        android:text="ADD WASTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
